/* pages/hot/hot.wxss */
.hot{
  width: 100%;
  height: 60rpx;
  color: black;
  font-weight: bolder;
  text-align: center;
  line-height: 60rpx;
  background-color: #ccc;
}
.item{
  display: -webkit-flex;
  margin: 10rpx 5rpx;
}
.left, .img{
  width: 180rpx;
  height: 250rpx;
  background-color: gray;
}
.right{
  margin-left: 10rpx;
  display: -webkit-flex;
  flex-direction: column;
  justify-content:space-around;
}
.title{
  text-overflow:ellipsis;
  max-width: 500rpx;
  overflow: hidden;
  white-space:nowrap;
}
.more {
  background: black;
  color: white;
}